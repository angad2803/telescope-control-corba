# CORBA Alarm System Environment Configuration
# Copy this to .env and customize for your environment

# Database Configuration (when database is added later)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=alma_alarm_system
DB_USER=alma_alarm_user
DB_PASSWORD=alma_acs_password

# CORBA Server Configuration
CORBA_SERVER_PORT=1234
CORBA_SERVER_HOST=localhost
CORBA_IOR_FILE=Alarm.ref

# Express Bridge Configuration
EXPRESS_PORT=3000
EXPRESS_HOST=0.0.0.0

# ALMA ACS Configuration
ACS_CONTAINER_NAME=DefaultContainer
ACS_COMPONENT_NAME=ALARMSYSTEM_CORBA_SERVER

# Development/Production Flags
ENVIRONMENT=development
DEBUG_MODE=true